@model MVC_Data.Models.ViewModels.EmployeeVM
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container" style="width:60%">
    @if(Model != null)
    {
    <ul class="list-group">
        <li class="list-group-item active">Employee Information</li>
        <li class="list-group-item">Employee Id : <b>@Model.Id</b></li>
        <li class="list-group-item">Name : <b>@Model.Name</b></li>
        <li class="list-group-item">Address : <b>@Model.Address</b></li>
        <li class="list-group-item">Department Id : <b>@Model.DepartmentId</b></li>
    </ul>
    }

</div>